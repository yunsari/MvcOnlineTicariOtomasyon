@model IEnumerable<MvcOnlineTicariOtomasyon.Models.Siniflar.SinifGrup2>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Departman Pesonel Sayıları</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-sm">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Departman</th>
                    <th>Progress Bar</th>
                    <th style="width: 40px">Sayı</th>
                </tr>
            </thead>
            <tbody>
                @{ int sirano = 0; }
                @foreach (var x in Model)
                {
                <tr>
                    <td>@{sirano++;} @sirano.</td>
                    <td>@x.Departman</td>
                    @if (x.Sayi == 1)
                    {
                        <td>
                            <div class="progress progress-xs">
                                <div class="progress-bar bg-danger" style="width: 40%"></div>
                            </div>
                        </td>
                        <td><span class="badge bg-danger">@x.Sayi</span></td>

                    }

                    @if (x.Sayi == 2)
                    {
                        <td>
                            <div class="progress progress-xs">
                                <div class="progress-bar bg-warning" style="width: 60%"></div>
                            </div>
                        </td>
                        <td><span class="badge bg-warning">@x.Sayi</span></td>

                    }

                    @if (x.Sayi == 3)
                    {
                        <td>
                            <div class="progress progress-xs">
                                <div class="progress-bar bg-primary" style="width: 80%"></div>
                            </div>
                        </td>
                        <td><span class="badge bg-primary">@x.Sayi</span></td>

                    }

                    @if (x.Sayi == 4)
                    {
                        <td>
                            <div class="progress progress-xs">
                                <div class="progress-bar bg-success" style="width: 100%"></div>
                            </div>
                        </td>
                        <td><span class="badge bg-success">@x.Sayi</span></td>

                    }
                </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>
<!-- /.card -->
