@model MvcOnlineTicariOtomasyon.Models.Siniflar.Personel

@{
    ViewBag.Title = "YeniPersonel";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Personel Ekleme Sayfası</h2>
<br />

@using (Html.BeginForm("YeniPersonel", "Personel", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <form class="form-group" method="post">

        <label>Personel Adı</label>
        @Html.TextBoxFor(x => x.PersonelAd, new { @class = "form-control" })
        <br />
        <label>Personel Soyadı</label>
        @Html.TextBoxFor(x => x.PersonelSoyad, new { @class = "form-control" })
        <br />
        <label>Personel Görsel</label><br />
        <input type="file" name="PersonelGorsel" />
        <br /><br />    
        <label>Personel Departman</label>
        @Html.DropDownListFor(x => x.Departmanid, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })
        <br />
        <button class="btn btn-info">Kaydet</button>
    </form>
}